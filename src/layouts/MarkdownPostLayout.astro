---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p><b>Description:</b> <em>{frontmatter.description}</em></p>
    <p><b>Written by</b> <em>{frontmatter.author}</em></p>
    <p><b>Pusblished on:</b> {frontmatter.pubDate.slice(0,10)}</p>
    <p><b>Tags:</b> {frontmatter.tags.map((tag) => <em> #{tag}</em>)}</p>
    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
    <slot />
</BaseLayout>